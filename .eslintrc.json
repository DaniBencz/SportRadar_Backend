{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", 2],
        "import/extensions": "off",
        "max-len": ["error", {
            "code": 120,
            "comments": 150
        }]
    },
    "settings": {
        "import/extensions": [".ts"],
        "import/resolver": {
            "node": {
                "extensions": [".js", ".ts", ".d.ts"]
            }
        }
    },
    "overrides": [
        {
            "files": ["*.test.ts"],
            "env": {
                "jest": true
            }
        }
    ]
}
